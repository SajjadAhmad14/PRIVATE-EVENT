<p id="notice"><%= notice %></p>

<h4><%= @event.name %></h4>
created by:
<h3><%= @event.creator.name %></h3>
<p><%= @event.description %></p>

<% if get_user_id %>
  <%= form_with(:url => attend_event_index_path) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>  
    <%= f.submit "Attend this Event" %>
  <% end %>
<% end %>

<br />

<h4>People attending this event</h4>
<ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= attendee.name %></li>  
  <% end %>
</ul>

<% if get_user_id %>
    <%= form_with(:url => user_invitation_index_path) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%=f.label :username%>
    <%=f.text_field :name%>
    <%= f.submit "Invite User" %>
  <% end %>
<% end %>